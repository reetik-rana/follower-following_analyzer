{
  "manifest_version": 3,
  "name": "Instagram Follower/Following Analyzer",
  "version": "1.0",
  "description": "Analyze followers and following lists directly on Instagram.",
  "permissions": ["scripting", "activeTab", "storage", "tabs", "runtime"],
  "host_permissions": ["https://www.instagram.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
